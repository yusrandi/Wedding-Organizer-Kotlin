<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/space_x2"
    android:background="#fff"
    android:orientation="vertical">

  <TextView
      android:id="@+id/dialog_transaksi_nama"
      android:textSize="@dimen/text_14"
      android:fontFamily="@font/nunito_reguler"
      android:text="Nama Produk"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

  <TextView
      android:id="@+id/dialog_transaksi_harga"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:fontFamily="@font/nunito_black"
      android:text="10K"
      android:textSize="@dimen/text_16" />

  <TextView
      android:id="@+id/dialog_transaksi_pinjam"
      android:layout_marginTop="@dimen/space_x2"
      android:gravity="center_vertical"
      android:background="@drawable/background_white"
      android:textSize="@dimen/text_14"
      android:fontFamily="@font/nunito_bold"
      android:text="Tanggal Pinjam"
      android:layout_width="match_parent"
      android:layout_height="@dimen/space_x5"/>

  <TextView
      android:id="@+id/dialog_transaksi_kembali"
      android:layout_width="match_parent"
      android:layout_height="@dimen/space_x5"
      android:layout_marginTop="@dimen/space_x2"
      android:background="@drawable/background_white"
      android:fontFamily="@font/nunito_bold"
      android:gravity="center_vertical"
      android:text="Tanggal Kembali"
      android:textSize="@dimen/text_14" />

</LinearLayout>
